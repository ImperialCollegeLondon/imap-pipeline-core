{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./build.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "pre-commit",
            "type": "shell",
            "command": "poetry run pre-commit run --all",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build",
            "platform": "python",
            "dockerBuild": {
                "tag": "imap-pipeline-core:latest",
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build"
            ],
            "python": {
                "file": "src/main.py"
            }
        },
        {
            "type": "shell",
            "label": "start_servers",
            "command": "${workspaceFolder}/start_dev.sh",
            "args": [
                "--no-deploy"
            ],
            // do not wait till the command is finished - just till server has started
            "isBackground": true,
             "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*STARTING DEV SERVERS.*",
                        "endsPattern": ".*SERVERS HAVE STARTED.*"
                    }
                }
            ]
        },
        {
            "type": "shell",
            "label": "start_servers_and_deploy_workflow",
            "command": "${workspaceFolder}/start_dev.sh",
            "args": [],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*STARTING DEV SERVERS.*",
                        "endsPattern": ".*Deployment complete.*"
                    }
                }
            ]
        }
    ],
    "version": "2.0.0"
}
