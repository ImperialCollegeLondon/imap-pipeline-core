{
    "configurations": [
        {
            "console": "integratedTerminal",
            "env": {
                "TESTCONTAINERS_HOST_OVERRIDE": "host.docker.internal",
                "WIREMOCK_DIND": "1"
            },
            "justMyCode": false,
            "name": "Python: Debug Tests",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "request": "launch",
            "type": "debugpy"
        },
        {
            "args": [
                "process",
                "--config",
                "config.yaml"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "name": "Python: Current File",
            "program": "${file}",
            "request": "launch",
            "type": "debugpy"
        },
        {
            "name": "Docker: Python - General",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "general"
            },
            "request": "launch",
            "type": "docker"
        }
    ],
    "version": "0.2.0"
}
